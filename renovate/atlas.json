{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Simplified Renovate configuration for Atlas-like projects",
  "enabled": true,
  "timezone": "America/Chicago",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    "helpers:pinGitHubActionDigests"
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "rebaseWhen": "behind-base-branch",
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Renovate Dashboard",
  "platformAutomerge": false,
  "automergeType": "pr",
  "automergeStrategy": "merge",
  "rangeStrategy": "bump",
  "nix": {
    "enabled": true
  },
  "lockFileMaintenance": {
    "enabled": true,
    "extends": ["schedule:monthly"],
    "automerge": true
  },
  "packageRules": [
    {
      "matchDatasources": ["crate", "docker"],
      "automerge": true
    },
    {
      "matchManagers": ["github-actions"],
      "automerge": true
    },
    {
      "matchPackageNames": ["arrow*", "parquet"],
      "groupName": "arrow-crates",
      "automerge": true
    },
    {
      "matchDatasources": ["github-actions"],
      "rangeStrategy": "pin",
      "automerge": true
    },
    {
      "matchDatasources": ["npm"],
      "rangeStrategy": "pin",
      "automerge": true
    }
  ]
}