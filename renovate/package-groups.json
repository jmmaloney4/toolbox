{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"description": "Package groupings for common technology stacks",
	"packageRules": [
		{
			"groupName": "TypeScript Dependencies",
			"matchPackageNames": ["typescript", "@types/*"],
			"automerge": true,
			"rangeStrategy": "pin"
		},
		{
			"groupName": "Node.js Dependencies",
			"matchPackageNames": ["@types/node", "node", "ts-node"],
			"automerge": true,
			"rangeStrategy": "pin"
		},
		{
			"groupName": "Testing Dependencies",
			"matchPackageNames": ["jest", "@types/jest"],
			"automerge": true,
			"rangeStrategy": "pin"
		},
		{
			"matchPackageNames": ["arrow*", "parquet*"],
			"groupName": "Arrow Ecosystem",
			"automerge": true,
			"rangeStrategy": "bump"
		},
		{
			"groupName": "Rust Dependencies",
			"matchManagers": ["cargo"],
			"matchDatasources": ["crate"],
			"automerge": true,
			"rangeStrategy": "bump"
		},
		{
			"groupName": "Docker Images",
			"matchDatasources": ["docker"],
			"automerge": true,
			"rangeStrategy": "pin"
		},
		{
			"groupName": "GitHub Actions",
			"matchManagers": ["github-actions"],
			"matchDatasources": ["github-actions"],
			"automerge": true,
			"rangeStrategy": "pin"
		}
	]
}
